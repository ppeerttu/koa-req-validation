{
    "name": "koa-req-validation",
    "version": "0.14.0",
    "description": "A request validation middleware for Koa.",
    "keywords": [
        "nodejs",
        "javascript",
        "typescript",
        "koa2",
        "validation"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prepublishOnly": "npm test && npm run build && npm run docs",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "demo": "./node_modules/.bin/ts-node ./demo/index.ts",
        "build": "./node_modules/.bin/tsc -p .",
        "docs": "./node_modules/.bin/typedoc --out docs/ src/ && touch docs/.nojekyll"
    },
    "author": "Perttu Kärnä <perttu.karna@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git://github.com/ppeerttu/koa-req-validation.git"
    },
    "homepage": "https://ppeerttu.github.io/koa-req-validation/",
    "license": "ISC",
    "devDependencies": {
        "@koa/router": "^9.3.1",
        "@types/jest": "^26.0.15",
        "@types/koa": "^2.11.6",
        "@types/koa-bodyparser": "^4.3.0",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.3",
        "koa": "^2.13.0",
        "koa-bodyparser": "^4.3.0",
        "prettier": "^2.2.0",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typedoc": "^0.19.2",
        "typescript": "^3.9.7",
        "validator": "^13.1.1"
    },
    "peerDependencies": {
        "@koa/router": ">=10.0.x",
        "koa-bodyparser": ">=4.3.x",
        "validator": ">=13.1.x"
    },
    "dependencies": {
        "@types/koa__router": "^8.0.3",
        "@types/validator": "^13.1.0"
    },
    "jest": {
        "preset": "ts-jest",
        "collectCoverageFrom": [
            "src/*.ts",
            "src/**/*.ts"
        ]
    }
}
